# Nuxt.js Environment Variables

# API Service URLs
NUXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3001
NUXT_PUBLIC_ORDERS_SERVICE_URL=http://localhost:3002
NUXT_PUBLIC_SUPPLIER_SERVICE_URL=http://localhost:3003
NUXT_PUBLIC_API_BASE_URL=http://localhost

# Application Configuration
NUXT_PUBLIC_APP_NAME=GasConnect
NUXT_PUBLIC_APP_VERSION=1.0.0
NUXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Paystack Configuration (Nigerian Payment Gateway)
# Get your keys from https://dashboard.paystack.com/settings/developer
NUXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here

# Development Configuration
NUXT_PUBLIC_DEV_MODE=true